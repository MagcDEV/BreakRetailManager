@inject NavigationManager Navigation
@inject SignOutSessionStateManager SignOutSessionStateManager
@inject UserRoleProvider RoleProvider
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BreakRetailManager.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="sales">
                        <span class="bi bi-bag-check-fill-nav-menu" aria-hidden="true"></span> Sales
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                @if (IsManagerOrAdmin)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="inventory">
                            <span class="bi bi-box-seam-fill-nav-menu" aria-hidden="true"></span> Inventory
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="offers">
                            <span class="bi bi-tags-fill-nav-menu" aria-hidden="true"></span> Offers
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                @if (IsAdmin)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/users">
                            <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Users
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <button class="nav-link btn btn-link text-start" @onclick="BeginLogout">
                        <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Sign out
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="authentication/login">
                        <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Sign in
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private bool IsAdmin => RoleProvider.Roles.Contains("Admin", StringComparer.OrdinalIgnoreCase);
    private bool IsManagerOrAdmin => IsAdmin || RoleProvider.Roles.Contains("Manager", StringComparer.OrdinalIgnoreCase);

    protected override async Task OnInitializedAsync()
    {
        RoleProvider.RolesChanged += HandleRolesChanged;
        await RoleProvider.InitializeAsync();
    }

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task BeginLogout()
    {
        await SignOutSessionStateManager.SetSignOutState();
        Navigation.NavigateTo("authentication/logout");
    }

    private void HandleRolesChanged()
    {
        _ = InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        RoleProvider.RolesChanged -= HandleRolesChanged;
    }
}
